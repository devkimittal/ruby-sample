# Ignore bundler config.
/.bundle

# Ignore the default SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal
/db/*.sqlite3-wal

# Ignore logs and temp files.
/log/*
!/log/.keep
/tmp
!/tmp/.keep

# Ignore coverage directory generated by simplecov.
/coverage/

# Ignore public/uploads directory used by CarrierWave for file uploads.
/public/uploads

# Ignore environment variables file.
.env

# Ignore macOS system files.
.DS_Store

# Ignore RubyMine configuration files.
.idea/

# Ignore system and application gems.
/vendor/bundle
/bin/
/Gemfile.lock

# Ignore local configuration files.
/config/application.yml

# Ignore environment configuration files.
/config/environments/*.local.yml
/config/environments/*.development.yml
/config/environments/*.test.yml
/config/environments/*.production.yml

# Ignore environment-specific database configuration files.
/config/database.yml
/config/database.yml.erb
/config/environments/*.local.yml
/config/environments/*.development.yml
/config/environments/*.test.yml
/config/environments/*.production.yml

# Ignore Pow server settings.
.powconfig

# Ignore yarn's version control.
.yarn/*
!.yarn/versions

# Ignore Node modules.
/node_modules

